
@model mmmSelfservice.Models.pettycashCard

@{
	ViewBag.Title = "Petty Cash";
	Layout = "~/Views/Shared/_Layout.cshtml";
	//Layout = "~/Views/Shared/paymenttype.cshtml";
}
	<div class="row">
		<div class="col-md-12">
			<div class="card">
				<div class="card-header">
					<h6 class="card-title">Petty Cash Edit( PC. No: @Model.No)</h6>
				</div>

				<div class="card-body">
					<div class="form-group row">
						<div class="col-lg-12">
							<div class="row">
								<div class="col-md-12">
									<div class="card-body">
										<form action="#">
											<div class="form-group">
												<div class="form-group row">
													<label class="col-form-label">Department Code:</label>
													<div class="col-lg">
														<select class="form-control text-info" id="departmentcode" onchange="">
															<option value="@Model.DepartmentCode">@Model.DepartmentCode</option>
															@Html.Action("department")
														</select>
													</div>
												</div>
											</div>
											<div class="form-group">
												<div class="form-group row">
													<label class="col-form-label">Directorate Code":</label>
													<div class="col-lg">
														<select class="form-control text-info" id="directoratecode">
															<option value="@Model.DirectorateCode">@Model.DirectorateCode</option>
															@Html.Action("departmentvalue")
														</select>
													</div>
												</div>
											</div>
											<div class="form-group">
												<div class="form-group row">
													<label class="col-form-label">Paying Bank:</label>
													<div class="col-lg">
														<select class="form-control text-info" id="bank" required>
															<option value="@Model.Bank">@Model.Bank</option>
															@Html.Action("payingbank")
														</select>
													</div>
												</div>
											</div>
											<div class="form-group">
												<div class="form-group">
													<label>Purpose:</label>
													<textarea rows="3" cols="3" id="purpose" class="form-control" placeholder="Enter your message here" required>@Model.Purpose</textarea>
												</div>
											</div>
											<div class="form-group">
												<div class="form-group">
													<label>Requested Amount:</label>
													<input id="requestedamount" class="form-control" value="@Model.Amount" placeholder="Enter requested Amount" required />
												</div>
											</div>
											<input type="hidden" id="PettyCashCode" value="@Model.No" />
											<div class="d-flex justify-content-between align-items-center">
												<button type="submit" onclick="updatePettyCash()" class="btn bg-blue">Submit <i class="icon-paperplane ml-2"></i></button>
											</div>
										</form>
									</div>
								</div>
							</div>
						</div>
						<div id="imprestId" hidden></div>
					</div>
				</div>
			</div>
		</div>
	</div>

