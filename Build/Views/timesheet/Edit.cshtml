 <script>
    function purchaserequest111111111() {


        var implines = [];
        $("#tbodyrequestline tr").each(function () {
            var row = $(this);
            var rowdata =
            {
                fromdate: row.find("td").eq(0).text(),
                todate: row.find("td").eq(1).text(),
                comments: row.find("td").eq(3).text()



            };


            implines.push(rowdata);
        });

        $.ajax({
            type: "POST",
            url: "/Timesheet/insertTimesheet",
            data: JSON.stringify({ name: $('#name').val(), startdate: ($('#startdate').val()), projectcode: $('#projectCode').val(), Timesheetlines: implines }),
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (response) {
                /// alert("You selected: " + response.AuthSuccess);
                if (response.Data != "") {
                    alert('Timesheet details saved');
                    window.location.href = '/Timesheet/index';

                } else {

                    alert(response.message);


                }

            }

        })
    }

    function addline1() {

        var tblstring = '<tr><td>' + $('#fromdate').val() + '</td><td>' + $('#todate').val() + '</td><td>' + $('#comments').val() + '</td><td><a href="#" onclick="removeEmptyLine(this)"><i class="icon-cross3 mr-3 icon-2x"></a></i></td></tr>';

        $('#tbodyrequestline').append(tblstring)

    }

</script>

