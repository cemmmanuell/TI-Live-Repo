            <script type="text/javascript">
                $('a.edit').on('click', function () {
                    $.ajax({
                        url: this.href,
                        type: 'GET',
                        cache: false,
                        success: function (result) {
                            $('#myModal').html(result).find('.modal').modal({
                                show: true
                            });
                        }
                    });
                });
            </script>
            <div id='myModal' class='modal'>
