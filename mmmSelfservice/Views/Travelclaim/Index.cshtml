@model List<mmmSelfservice.Models.imprestRinfoModel>
@{
	ViewBag.Title = "Staff Imprest";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript" src="~/Content/base.js"></script>
<div class="page-header page-header-light mb-0">
	<div class="page-header-content header-elements-md-inline">
		<div class="page-title d-flex">
			<h4><i class="icon-arrow-left52 mr-2"></i> <span class="font-weight-semibold">Home</span> - Travel claim</h4>
			<a href="#" class="header-elements-toggle text-default d-md-none"><i class="icon-more"></i></a>
		</div>
	</div>
	<div class="breadcrumb-line breadcrumb-line-light header-elements-md-inline">
		<div class="d-flex">
			<div class="breadcrumb">
				<a href="@Url.Action("../Home")" class="breadcrumb-item"><i class="icon-home2 mr-2"></i> Home</a>
				<a href="@Url.Action("index")" class="breadcrumb-item">Travel claim</a>

			</div>
			<a href="#" class="header-elements-toggle text-default d-md-none"><i class="icon-more"></i></a>
		</div>
		<div class="header-elements d-none">
		</div>
	</div>
</div>
<br />
<div class="row">
	
	@*<div class="col-md-8">
		<div class="card">
			<div class="card-header header-elements-inline">
				<h6 class="card-title">Imprest Information</h6>
			</div>*@
	<div class="card col-sm-12">
		<div class="content">
            <a class="btn bg-teal-400 btn-labeled btn-labeled-left legitRipple" data-toggle="modal" data-target="#modal_backdrop8"><b><i class="icon-file-plus"></i></b>New claim</a>
			<table class="table datatable-show-all">
				<thead>
					<tr>
						<th>No</th>
						<th>Date</th>
						<th>Amount</th>
						<th>Status</th>
						<th>Department</th>
						<th class="text-center">Action</th>
					</tr>
				</thead>
				<tbody>
					@foreach (mmmSelfservice.Models.imprestRinfoModel data in Model)
					{
						<tr>
							<td>@data.No</td>
							<td>@data.Document_Date</td>
							<td>@data.Amount</td>
							@if (@data.Status == "Pending Approval")
							{
								<td><span class="badge bg-success-400">@data.Status</span></td>
							}
							else
							{
								<td><span class="badge bg-blue">@data.Status</span></td>
							}
							<td>@data.DepartmentCode</td>
							<td class="text-center">
								<div class="list-icons">
									<div class="dropdown">
										<a href="#" class="list-icons-item" data-toggle="dropdown">
											<i class="icon-menu9"></i>
										</a>

										<div class="dropdown-menu dropdown-menu-right">
											@if (data.Status == "Open")
                                            {
                                                <a  onClick="editimp('@data.No')" class="dropdown-item" data-toggle="modal" data-target="#modal_backdropimprest" >Edit</a>

												@*@Html.ActionLink("Add Line", "ImprestLine", "Imprest", new { ImprestNo = data.No }, new { @class = "dropdown-item icon-add-to-list" })

												<a href="@Url.Action("sendforapproval", new { imprestNo = data.No })" class="dropdown-item"><i class="icon-file-check"></i>Send approval request</a>*@
											}
											@if (data.Status == "Pending Approval")
											{
												<a href="@Url.Action("sendforapprovalcancel", new { imprestNo = data.No })" class="dropdown-item"><i class="icon-eraser2"></i>Cancel approval request</a>
											}
										</div>
									</div>
								</div>
							</td>
						</tr>
					}
				</tbody>
			</table>
			<script type="text/javascript">
                $('a.edit').on('click', function () {
                    $.ajax({
                        url: this.href,
                        type: 'GET',
                        cache: false,
                        success: function (result) {
                            $('#myModal').html(result).find('.modal').modal({
                                show: true
                            });
                        }
                    });
                });
			</script>
			<div id='myModal' class='modal'>
				<div class="modal-dialog">
					<div class="modal-content">
						<div id='myModalContent'></div>
					</div>
				</div>

			</div>
			<!-- Iconified modal -->
			<div id="modal_Create_line" class="modal fade" tabindex="-1">
				<div class="modal-dialog">
					<div class="modal-content">
						<div class="modal-header">
							<h5 class="modal-title"><i class="icon-menu7 mr-2"></i> &nbsp;Travel authorization lines</h5>
							<button type="button" class="close" data-dismiss="modal">&times;</button>
						</div>

						<div class="modal-body">

						</div>
						<div class="modal-footer">
							<button class="btn btn-link" data-dismiss="modal"><i class="icon-cross2 font-size-base mr-1"></i> Close</button>
							<button class="btn bg-primary"><i class="icon-checkmark3 font-size-base mr-1"></i> Save</button>
						</div>
					</div>
				</div>
			</div>
			<!-- /iconified modal -->
		</div>
	</div>
	@*</div>
		</div>*@
</div>

@Html.Partial("newimprest")

<div id="modal_backdropimprest" class="modal fade" tabindex="-1" style="display: none;" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Travel authorization</h5>
                <button type="button" class="close" data-dismiss="modal">×</button>
            </div>
            <div id="imp4"></div>

        </div>
    </div>
</div>

<script>
                function editimp(mno) {

                    debugger;
                    $.ajax({
                        type: "POST",
                        url: "/Imprest/editImp",
                        data: '{no:"' + mno + '"}',
                        contentType: "application/json; charset=utf-8",
                        dataType: "html",
                        success: function (response) {
                            debugger;
                            $('#imp4').html('');
                            $('#imp4').html(response);

                        }

                    });
                }
</script>
