@model mmmSelfservice.Models.trainingschedule
<div class="modal-dialog modal-full">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">Employee training schedule</h5>
            <button type="button" class="close" data-dismiss="modal">×</button>
        </div>
        <div id="alert_s">
            <div class="alert alert-danger alert-styled-left alert-dismissible" style="display:none">

                <span id="msg"></span>
            </div>
        </div>
        <div>

            <div class="modal-body">
                <div class="form-group row">
                    <label class="col-form-label col-sm-3">Year</label>
                    <div class="col-sm-9">
                        <input type="text" id="year_s1" value="@Model.Year" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-form-label col-sm-3">Topic</label>
                    <div class="col-sm-9">
                        <input type="text" id="topic1" value="@Model.topic" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-form-label col-sm-3">Facilitator</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" value="@Model.Facilitator" id="facilitator1" />
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-form-label col-sm-3">Department</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" id="department_s1" />
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-form-label col-sm-3">Schedule date</label>
                    <div class="col-sm-9">
                        <input type="date" class="form-control" value="@Model.ScheduledDate" id="scheduleDate1" />
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-form-label col-sm-3">Employees</label>
                    <div class="col-sm-9">
                        <textarea class="form-control" value="@Model.Employees" id="employees_S1"></textarea>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-form-label col-sm-3">Evidence of training</label>
                    <div class="col-sm-9">
                        <textarea class="form-control" value="@Model.Evidence" id="evidence1"></textarea>
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>
