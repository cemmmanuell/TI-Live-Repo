@model List<mmmSelfservice.Models.imprestRinfoModel>
@{
    ViewBag.Title = "Staff Purchase request";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript" src="~/Content/base.js"></script>
<div class="page-header page-header-light mb-0">
    <div class="page-header-content header-elements-md-inline">
        <div class="page-title d-flex">
            <h4><i class="icon-arrow-left52 mr-2"></i> <span class="font-weight-semibold">Home</span> -Travel authorization expense </h4>
            <a href="#" class="header-elements-toggle text-default d-md-none"><i class="icon-more"></i></a>
        </div>
    </div>
    <div class="breadcrumb-line breadcrumb-line-light header-elements-md-inline">
        <div class="d-flex">
            <div class="breadcrumb">
                <a href="@Url.Action("../Home")" class="breadcrumb-item"><i class="icon-home2 mr-2"></i> Home</a>
                <a href="@Url.Action("index")" class="breadcrumb-item">Travel authorization expense</a>

            </div>
            <a href="#" class="header-elements-toggle text-default d-md-none"><i class="icon-more"></i></a>
        </div>
        <div class="header-elements d-none">
        </div>
    </div>
</div>
<br />
<div class="row">
  
    <div class="card col-sm-12">
        <div class="content">
            <table class="table datatable-show-all">
                <thead>
                    <tr>
                        <th>No</th>
                        <th>Date</th>
                        <th>Amount</th>
                        <th>Status</th>
                        <th>Department</th>
                        <th class="text-center">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (mmmSelfservice.Models.imprestRinfoModel data in Model)
                    {
                        <tr>
                            <td>@data.No</td>
                            <td>@data.Document_Date</td>
                            <td>@data.Amount</td>
                            @if (@data.Status == "Pending Approval")
                            {
                                <td><span class="badge bg-success-400">@data.Status</span></td>
                            }
                            else
                            {
                                <td><span class="badge bg-blue">@data.Status</span></td>
                            }
                            <td>@data.DepartmentCode</td>
                            <td class="text-center">
                                <div class="list-icons">
                                    <div class="dropdown">
                                        <a href="#" class="list-icons-item" data-toggle="dropdown">
                                            <i class="icon-menu9"></i>
                                        </a>

                                        <div class="dropdown-menu dropdown-menu-right">
                                            @if (data.Status == "Open")
                                            {
                                                @Html.ActionLink("Edit", "Purchase requestEdit", "Purchase request", new { imprestNo = data.No }, new { @class = "dropdown-item" })

                                                @Html.ActionLink("Add Line", "Purchase requestLine", "Purchase request", new { imprestNo = data.No }, new { @class = "dropdown-item icon-add-to-list" })

                                                <a href="@Url.Action("sendforapproval", new { imprestNo = data.No })" class="dropdown-item"><i class="icon-file-check"></i>Send approval request</a>
                                            }
                                            @if (data.Status == "Pending Approval")
                                            {
                                                <a href="#" data-toggle="modal" data-target="#modal_backdrop1211"  onclick="getimprestsurrender1('@data.No')" class="dropdown-item"><i></i>View</a>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <script type="text/javascript">
                $('a.edit').on('click', function () {
                    $.ajax({
                        url: this.href,
                        type: 'GET',
                        cache: false,
                        success: function (result) {
                            $('#myModal').html(result).find('.modal').modal({
                                show: true
                            });
                        }
                    });
                });
            </script>
            <div id='myModal' class='modal'>
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div id='myModalContent'></div>
                    </div>
                </div>

            </div>
            <!-- Iconified modal -->
            <div id="modal_Create_line" class="modal fade" tabindex="-1">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title"><i class="icon-menu7 mr-2"></i> &nbsp;Purchase request Line</h5>
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                        </div>

                        <div class="modal-body">

                        </div>
                        <div class="modal-footer">
                            <button class="btn btn-link" data-dismiss="modal"><i class="icon-cross2 font-size-base mr-1"></i> Close</button>
                            <button class="btn bg-primary"><i class="icon-checkmark3 font-size-base mr-1"></i> Save</button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /iconified modal -->
        </div>
    </div>
    @*</div>
        </div>*@
</div>
<script>
	document.onload(getLeavesummary());
	Document.getLeavesummary();


	function getimprestsurrender1(no){
	    debugger;
	    $.ajax({
	        type: "POST",
	        url: "/ImprestAccounting/imprestsurrendereditView",
	        data: '{no:"' + no + '"}',
	        contentType: "application/json; charset=utf-8",
	        dataType: "html",
	        success: function (response) {
	            debugger;
	            $('#surrendercard1').html('');
	            $('#surrendercard1').html(response);

	        }

	    });
	}



	function sendapproval() {
	    debugger;
	    var no = $('#srno').text();
	    $.ajax({
	        type: "POST",
	        url: "/ImprestAccounting/sendforapproval",
	        data: '{no:"' + no + '"}',
	        contentType: "application/json; charset=utf-8",
	        dataType: "html",
	        success: function (response) {
	            alert('Approval sent successfully');
	            window.location.href = "Imprestaccounting/index";

	        }

	    });
	}

</script>


@Html.Partial("imprestsurrendercardView");