<script>
    function addlinetotables1() {
     
        var temp = "<tr><td><input type='text' class='form-control text-primary'></td><td><input type='number' class='form-control'></td><td class='text-center'><div class='list-icons'><a onclick=addlinetotables(1) class='list-icons-item'><i class='icon-plus3 font-size-base></i></a><a class='list-icons-item'></a></div></td></tr>";
            $('#jnlline').append(temp);
      
       

    }

    function addjnllines() {

      
        var documentno;
        var postingdate;
        var jnllines = [];
        var payingbank;

        debugger;

        documentno = $('#documentno').val();
        postingdate = $('#postingdate').val();
        payingbank = $('#bank option:selected').val();

        var table1;

        table1 = $('#jnlline tr');
        

        table1.each(function () {
            var row = $(this);
            //var Statement = {};
            var rowdata = row.find("td:eq(0) input[type='text']").val() + '??' + row.find("td:eq(1) input[type='date']").val() + row.find("td:eq(2) input[type='text']").val() + '??'+ '??' + row.find("td:eq(3) input[type='number']").val() + '??' + row.find("td:eq(5)").val();

            jnllines.push(rowdata);
        });
       


        $.ajax({
            type: "POST",
            url: "/PettyCash/InsertJournals",
            data: JSON.stringify({
                Document: documentno,
                Journals:jnllines,
               
                PBank: payingbank
             
            }),
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (response) {
                /// alert("You selected: " + response.AuthSuccess);
                if (response.status == true) {
                    alert('Saved succesfuly');

                    window.location.href = '/Pettycash/pettycashBank';

                } else {
                    alert(response.message);


                }

            }

        });
    }
   

    function onchangebank() {
        $.ajax({
            type: "POST",
            url: "/PettyCash/savedjournals",
            data: JSON.stringify({
                payingbank: $('#bank option:selected').val()

            }),
            contentType: "application/json; charset=utf-8",
            dataType: "html",
            success: function (response) {
                /// alert("You selected: " + response.AuthSuccess);
                $('#jnlline').html('');
                $('#jnlline').before(response);

            }

        });
    }

</script>